{
    "applicationName": "MultimediaCreator",
    "version": "0.0.1",
    "entryPointComponent": "video-creator",
    "description": "Create Videos",
    "componentsDirPath": "web-components",
    "components": [
        {
            "name": "video-creator",
            "presenterClassName": "VideoCreator",
            "type": "modals"
        }
    ],
    "services": [
        {
            "serviceName": "RoutingService",
            "servicePath": "services/RoutingService.js"
        }
    ],
    "manager": {
        "path": "manager.js",
        "name": "Manager"
    },
    "plugins": {
        "document": [
            {
                "tooltip": "Video Preview",
                "component": "document-video-preview",
                "icon": "assets/icons/preview.svg",
                "presenter": "DocumentVideoPreview",
                "type": "embedded"
            }
        ],
        "abstract": [],
        "paragraph": [
            {
                "tooltip": "Video Preview",
                "component": "paragraph-video-preview",
                "icon": "assets/icons/preview.svg",
                "presenter": "ParagraphVideoPreview",
                "type": "embedded"
            },
            {
                "tooltip": "Video Creator",
                "component": "video-creator",
                "icon": "assets/icons/video.svg",
                "iconPresenter": "SimpleStateIcon",
                "iconComponent": "simple-state-icon",
                "presenter": "VideoCreator",
                "type": "embedded"
            },
            {
                "tooltip": "Audio Creator",
                "component": "audio-creator",
                "icon": "assets/icons/audio.svg",
                "iconPresenter": "SimpleStateIcon",
                "iconComponent": "simple-state-icon",
                "presenter": "AudioCreator",
                "type": "embedded"
            },
            {
                "tooltip": "Image Creator",
                "component": "image-creator",
                "icon": "assets/icons/image.svg",
                "iconPresenter": "SimpleStateIcon",
                "iconComponent": "simple-state-icon",
                "presenter": "ImageCreator",
                "type": "embedded"
            }
        ],
        "chapter": [
            {
            "tooltip": "Chapter Audio",
            "component": "chapter-audio",
            "icon": "assets/icons/chapter-audio.svg",
            "presenter": "ChapterAudio",
            "type": "modal"
            }
        ]
    }
}

